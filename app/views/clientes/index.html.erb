<div class="container">
  <div class="row">

    <h1>Clientes</h1>

    <table class="table  table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cpf</th>
          <th>Email</th>
          <th>Telefone</th>
          <th>Celular</th>
          <th>Nascimento</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clientes.each do |cliente| %>
          <tr>
            <td><%= cliente.nome %></td>
            <td><%= cliente.cpf %></td>
            <td><%= cliente.email %></td>
            <td><%= cliente.telefone %></td>
            <td><%= cliente.celular %></td>
            <td><%= cliente.nascimento %></td>
            <td><%= link_to 'Detalhes', cliente %></td>
            <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
            <td><%= link_to 'Apagar', cliente, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Novo Cliente', new_cliente_path %>

  </div>
</div>
