<div class="container">
  <div class="row">

    <h1>Dividas</h1>

    <table class="table  table-striped">
      <thead>
        <tr>
          <th>Empresa</th>
          <th>Cliente</th>
          <th>Valor</th>
          <th>Flag</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @dividas.each do |divida| %>
          <tr>
            <td><%= divida.empresa_id %></td>
            <td><%= divida.cliente_id %></td>
            <td><%= divida.valor %></td>
            <td><%= divida.flag %></td>
            <td><%= link_to 'Exibir', divida %></td>
            <td><%= link_to 'Editar', edit_divida_path(divida) %></td>
            <td><%= link_to 'Apagar', divida, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nova Divida', new_divida_path %>
  </div>
</div>
